
.main-content
  display: flex
  justify-content: space-between
  position: relative

.yearly-archive
  flex: 1
  margin: 0 30px
  border-left: 20px solid #286e34

.year-section
  padding: 8px
  margin-bottom: 2px

.year-title
  display: flex
  align-items: center
  margin-left: -20px

.post-list 
  flex: 1
  margin: 0 30px
  padding: 0 10px
  border-left: 16px solid #286e34

  .post-item
    border-bottom: 1px solid #e5e7eb
    padding: 8px

    &:last-child
      border-bottom: none

.post-meta
  display: flex
  align-items: baseline
  justify-content: flex-start
  color: #c2c2c2

.post-detail
  flex: 1
  padding: 40px
  overflow: auto

  &.has-toc
    margin-left: 300px;

  &.toc-collapsed
    margin-left: 0;
    transition: all 0.3s ease-in-out;

  .post-title
    font-weight: 600
    margin-bottom: 10px

  .post-content
    font-size: 18px
    line-height: 1.6
    color: #333
    margin-top: 20px

  .post-tags, .post-categories
    margin-left: 20px
    font-size: 18px
    color: #c2c2c2

@media screen and (max-width: 768px)
  .main-content
    flex-direction: column

    .post-list
      margin: 30px 0 0 
      padding: 0
      border: 0

      .post-item:last-child
        border-bottom: 1px solid #e5e7eb;

    .year-section
      padding: 0 20px

      .year-title
        display: none

    .post-detail
      padding: 20px

@import './toc.styl'