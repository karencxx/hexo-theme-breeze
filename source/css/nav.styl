
.header-container
  display: flex
  justify-content: space-between
  align-items: center
  padding: 24px
  box-shadow: 2px -2px 10px #e5e7eb
  transition: box-shadow 0.3s ease

  &.post-header
    padding: 10px 24px
  .title
    font-size: 28px
    font-weight: bold
    color: #286e34
    display: flex
    align-items: center

  a
    display: flex
    align-items: center
    text-decoration: none
    color: inherit

  .leaf-icon
    width: 30px
    height: 42px
    background: url('/images/Icon-leaf.png') no-repeat
    background-size: contain
    margin-right: 6px

  .nav ul
    display: flex
    gap: 28px

    .nav-item
      text-decoration: none
      font-size: 16px
      font-weight: 500
      transition: color 0.3s ease

      &:hover
        color: #286e34 !important


@media screen and (max-width: 768px)
  .header-container
    padding: 24px 12px

    &.post-header
      padding: 10px 12px
