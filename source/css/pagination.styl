// 分页样式
.pagination
  padding: 1em 0
  text-align: right
  width: 100%
  clear: both

  .page-number,
  .extend
    display: inline-block
    margin: 0 0.3em
    padding: 0.5em 1em
    border: 1px solid #ddd
    border-radius: 4px
    color: #666
    text-decoration: none
    transition: all 0.3s ease

    &:hover
      background-color: #286e34
      color: #fff
      border-color: #ccc

  .current
    background-color: #286e34
    color: #fff

  .space
    margin: 0 0.5em

  // 上一页和下一页按钮样式
  .extend
    &.prev
      margin-right: 1em
    
    &.next
      margin-left: 1em
